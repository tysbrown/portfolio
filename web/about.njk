---
layout: layouts/home.njk
eleventyNavigation:
  key: About
  order: 2
---

<div class="row mt-6">
  <div class="col-lg-9 pl-lg-0 pl-3">
    <h1 class="mb-5 display-4 text-primary">{{ about.title }}</h1>
    <h2 class="h1 mb-5 display-4">{{ about.header }}</h2>
    <p class="font-weight-light subheader-text">{{ about.subheader }}</p>
  </div>
  <div class="col-lg-3 pr-lg-0 pr-3 mt-lg-0 mt-5">
    <img src="{% croppedUrlFor about.image, 300, 500 %}" alt="{{ about.image.alt }}" width="100%">
  </div>
</div>

<div class="row mt-6">
  <div class="col-lg-9 pl-lg-0 pl-3">
    {{ about.body | markdownify | safe }}
  </div>
  <div class="col-lg-3 pr-lg-0 pr-3 mt-lg-0 mt-5 border-left border-dark">
    <h1>Skills and Tools</h1>
    <ul>
      {% set x = 0 %}
      {% for skill in about.keywords %}
      <li>{{ about.keywords[x] }}</li>
      {% set x = x + 1 %}
      {% endfor %}
    </ul>

  </div>
</div>
