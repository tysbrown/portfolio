---
layout: layouts/home.njk
eleventyNavigation:
  key: Home
  order: 1
---
<div class="row flex-lg-row flex-column-reverse justify-content-center vh-100">
  <div class="col-lg-7 p-lg-0 d-flex flex-column justify-content-center" style="z-index: 2;">
    <span class="h1 text-primary mt-lg-0 mt-4 text-lg-left text-center">Hello</span>
    <h1 class="display-3 my-lg-5 my-4 mr-lg-n200 text-lg-left text-center header-toggle">{{ index.header }}</h1>
    <p class="font-weight-light subheader-text text-lg-left text-center">{{ index.subheader }}</p>
  </div>
  <div class="col-lg-5 p-0 d-flex flex-lg-row align-items-center flex-column">
    <picture class="d-flex justify-content-center">
      <source media="(max-width: 992px)" srcset="assets/tbdmobileselfie.png">
      <source media="(min-width: 993px)" srcset="assets/selfiephoto.png">
      <img src="assets/selfiephoto.png" alt="Tyler Brown standing in suit" class="img-fluid img-size-toggle">
    </picture>
  </div>
</div>

<div class="row my-5">
  <div class="col-12 p-lg-0">
    <span class="h1 text-primary">01 - Selected Works</span>
  </div>
</div>

<!-- Selected Works Accordion -->
<div class="accordion" id="portfolioAccordion">
  {% for portfolioProject in index.selectedWorks %}
  <div class="row mb-5">
    <div class="col-12 p-lg-0 border-bottom border-dark">
      <a href="#{{ portfolioProject.slug.current }}" data-toggle="collapse" class="h1 display-1 text-secondary">{{ portfolioProject.name }}</a>
      <p class="my-5">{{ portfolioProject.stack }}</p>
      <div class="collapse container-fluid" id="{{ portfolioProject.slug.current }}" data-parent="#portfolioAccordion">
        <div class="row mb-5">
          <div class="col-lg-4 px-0">
            <a href="#"><img src="{% imageUrlFor portfolioProject.image, 700 %}" alt="{{ portfolioProject.image.alt }}" width="100%"></a>
          </div>
          <div class="col-lg-8 d-flex flex-column justify-content-center px-lg-3 px-0 mt-lg-0 mt-5">
            <h2>Project Overview</h2>
            <p>
              {{ portfolioProject.projectExcerpt }}
            </p>
            <a href="/portfolio/#{{ portfolioProject.slug.current }}" class="text-uppercase">Read More →</a>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endfor %}
</div>
<!-- Selected Works Accordion End -->

<div class="row mb-5 mt-lg-7 mt-6">
  <div class="col-12 p-lg-0">
    <span class="h1 text-primary">02 - Recent Blog Posts</span>
  </div>
</div>

<!-- Loops through first 3 iterations of postslist to display 3 most recent blog posts -->
{% set postslist = collections.myPosts %}
{% for post in postslist | reverse %}
{% if loop.index0 < 3 %}
{% set currentPost = post.data.post %}
<div class="row mt-lg-3 mt-5">
  <div class="col-lg-3 p-lg-0">
    <a href="{{ post.url | url }}"><img src="{% croppedUrlFor currentPost.mainImage, 300, 250 %}" alt="{{ currentPost.mainImage.alt }}" width="100%"></a>
  </div>
  <div class="col-lg-9 mt-lg-0 mt-3 d-flex flex-column justify-content-center">
    <h2>
      <a href="{{ post.url | url }}" class="text-secondary">{% if currentPost.title %}{{ currentPost.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
    </h2>
    <time class="small font-weight-light" datetime="{{ currentPost.publishedAt }}">{{ currentPost.publishedAt|readableDate }}</time>
    {{ currentPost.excerpt | markdownify | safe }}
    <a href="{{ post.url | url }}" class="text-uppercase">Read More →</a>
  </div>
</div>
{% endif %}
{% endfor %}

<div class="row mb-5 mt-lg-7 mt-6">
  <div class="col-12 p-lg-0">
    <span class="h1 text-primary">03 - Get in Touch</span>
  </div>
</div>

<div class="row my-5">
  <div class="col-12 p-lg-0">
    <p class="h1 display-2 text-secondary">If you're interested in hiring me for a freelance project, please <a href="#" class="text-secondary" style="text-decoration: underline;">fill out this form.</a></p>
    <span class="text-right d-flex flex-column align-items-end">
      <p class="h1 text-secondary mt-5">For all other inquires:</p>
      <a href="#" class="h1 display-4 text-secondary" style="text-decoration: underline;">hello@tylerbrowndev.com</a>
    </span>
  </div>
</div>
