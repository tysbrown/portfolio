<!-- Loops through first 3 iterations of postslist to display 3 most recent blog posts -->
{% set postslist = collections.myPosts %}
{% for post in postslist | reverse %}
{% if loop.index0 < 3 %}
{% set currentPost = post.data.post %}
<div class="row mt-lg-3 mt-5">
  <div class="col-lg-3 p-lg-0">
    <a href="{{ post.url | url }}"><img src="{% croppedUrlFor currentPost.mainImage, 300, 250 %}" alt="{{ currentPost.mainImage.alt }}" width="100%"></a>
  </div>
  <div class="col-lg-9 mt-lg-0 mt-3 d-flex flex-column justify-content-center">
    <h2>
      <a href="{{ post.url | url }}" class="text-secondary">{% if currentPost.title %}{{ currentPost.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
    </h2>
    <time class="small font-weight-light" datetime="{{ currentPost.publishedAt }}">{{ currentPost.publishedAt|readableDate }}</time>
    {{ currentPost.excerpt | markdownify | safe }}
    <a href="{{ post.url | url }}" class="text-uppercase">Read More →</a>
  </div>
</div>
{% endif %}
{% endfor %}

