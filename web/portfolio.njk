---
layout: layouts/home.njk
eleventyNavigation:
  key: Portfolio
  order: 3
---
<div class="row">
  <div class="col-12 px-lg-0 px-3">
    <h1 class="h1 mt-6 mb-6 display-4 text-primary">Portfolio</h1>
  </div>
</div>
{% for portfolio in portfolio %}
<div class="row">
  <div class="col-12 px-lg-0 px-3">
    <h1 class="display-1" id="{{ portfolio.slug.current }}">{{ portfolio.name }}</h1>
  </div>
</div>
<div class="row my-5">
  <div class="col-12 px-lg-0 px-3">
    {{ portfolio.stack }}
  </div>
</div>
<div class="row border-bottom border-dark pb-6 mb-6">
  <div class="col-lg-4 pl-lg-0 pl-3">
    <img src="{% imageUrlFor portfolio.image, 700 %}" alt="portfolio.image.alt" width="100%">
  </div>
  <div class="col-lg-8 pr-lg-0 pr-3">
    {{ portfolio.body | markdownify | safe }}
  </div>
</div>
{% endfor %}
