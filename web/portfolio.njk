---
layout: layouts/home.njk
eleventyNavigation:
  key: Portfolio
  order: 3
templateClass: tmpl-portfolio
---
<div class="row">
  <div class="col-12 px-lg-0 px-3">
    <h1 class="h1 mt-lg-7 mt-6 mb-5 display-3 text-primary">Portfolio</h1>
  </div>
</div>
{% for portfolio in portfolio %}
<div class="row">
  <div class="col-12 px-lg-0 px-3">
    <h1 class="display-1" id="{{ portfolio.slug.current }}">{{ portfolio.name }}</h1>
  </div>
</div>
<div class="row my-5">
  <div class="col-12 px-lg-0 px-3">
    {{ portfolio.stack }}
  </div>
</div>
<div class="row border-bottom border-dark pb-6 mb-6">
  <div class="col-12 px-lg-0 px-3">
    <span class="d-flex justify-content-center w-100 mb-5">
      <img src="{% imageUrlFor portfolio.image, 700 %}" alt="portfolio.image.alt" class="img-fluid height-auto">
    </span>
    <h2>Project Overview</h2>
    {{ portfolio.body | markdownify | safe }}
  </div>
</div>
{% endfor %}
